@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model PushNotifications.Models.Message
@{
    ViewData["Title"] = "Simple message sender";
}

<h2>Simple message sender</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Msg" class="control-label"></label>
                <input asp-for="Msg" class="form-control" />
                <span asp-validation-for="Msg" class="text-danger"></span>
            </div>
            <div>
                <strong>@Model.Status</strong>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
